<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="whiteButton">
        <item name="background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <style name="redButton">
        <item name="background">@color/red</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">0dp</item>
    </style>
    <style name="myTextView">
        <item name="android:layout_row">0</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_columnWeight">4</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="myGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:rowCount">7</item>
        <item name="android:columnCount">4</item>
        <item name="android:background">@color/black</item>
    </style>
</resources>